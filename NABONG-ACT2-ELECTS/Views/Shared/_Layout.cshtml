<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shaun's Portfolio</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&display=swap" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container">
        <header class="d-flex justify-content-between align-items-center py-4">
            <!-- Logo -->
            <div class="logo-container">
                <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
                    <h1 class="logo">SHAUN</h1>
                </a>
            </div>

            <!-- Navigation -->
            <nav>
                <ul class="nav d-flex justify-content-between align-items-center nav-container">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "About" ? "active" : "")" href="/Home/About">ABOUT ME</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Portfolio" ? "active" : "")" href="/Home/Portfolio">MY PROJECTS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Contact" ? "active" : "")" href="/Home/Contact">CONTACT</a>
                    </li>
                </ul>
            </nav>
        </header>

        <main role="main" class="py-4">
            @RenderBody()
        </main>
    </div>
</body>
</html>
