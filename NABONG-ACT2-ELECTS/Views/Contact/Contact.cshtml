@{
    ViewData["Title"] = "Contact";
}

<div class="bento-box mt-4">
    <h2 class="text-center mb-4">CONTACT ME!</h2>
    <form>
        <div class="mb-4">
            <label class="form-label">NAME:</label>
            <input type="text" class="form-control rounded-pill" required>
        </div>
        <div class="mb-4">
            <label class="form-label">EMAIL:</label>
            <input type="email" class="form-control rounded-pill" required>
        </div>
        <div class="mb-4">
            <label class="form-label">PHONE:</label>
            <input type="tel" class="form-control rounded-pill" required>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-dark rounded-pill px-4">SUBMIT</button>
        </div>
    </form>
</div>